---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
---

<BaseLayout>
  <Header />
  <section class="bg-blue-900 text-white py-20 px-6 text-center">
    <h1 class="text-4xl md:text-5xl font-bold">Reliable Contracting Solutions</h1>
    <p class="mt-4 text-lg">Residential & Commercial Construction Experts</p>
  </section>

  <section class="py-16 px-6 max-w-5xl mx-auto">
    <h2 class="text-2xl font-bold mb-6">Our Services</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-white shadow-md p-6 rounded-lg border">
        <h3 class="text-xl font-semibold mb-2">Remodeling</h3>
        <p>Transform your space with custom renovations tailored to your needs.</p>
      </div>
      <div class="bg-white shadow-md p-6 rounded-lg border">
        <h3 class="text-xl font-semibold mb-2">Roofing</h3>
        <p>Durable, weather-resistant roofing solutions for all building types.</p>
      </div>
      <div class="bg-white shadow-md p-6 rounded-lg border">
        <h3 class="text-xl font-semibold mb-2">Plumbing</h3>
        <p>Professional installation and maintenance of modern plumbing systems.</p>
      </div>
    </div>
  </section>


<section id="services" class="py-16 px-6 max-w-5xl mx-auto">
  <h2 class="text-2xl font-bold mb-6">About Us</h2>
  <p class="text-lg leading-relaxed text-gray-700">
    With over 15 years of experience, Reliable Contracting provides residential and commercial construction services across the region. We focus on quality workmanship, transparent pricing, and timely project delivery.
  </p>
</section>
<section id="projects" class="py-16 px-6 max-w-6xl mx-auto">
  <h2 class="text-2xl font-bold mb-6">Recent Projects</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <img src="https://via.placeholder.com/400x250" alt="Project 1" class="rounded-lg shadow" />
    <img src="https://via.placeholder.com/400x250" alt="Project 2" class="rounded-lg shadow" />
    <img src="https://via.placeholder.com/400x250" alt="Project 3" class="rounded-lg shadow" />
  </div>
</section>
<section  class="bg-gray-100 py-16 px-6">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-2xl font-bold mb-6">What Our Clients Say</h2>
    <div class="space-y-8">
      <blockquote class="italic text-gray-700">“Excellent work and very professional. Our kitchen remodel was done ahead of schedule!”<br /><span class="block font-semibold mt-2">— Sarah M.</span></blockquote>
      <blockquote class="italic text-gray-700">“Reliable Contracting handled our roof replacement flawlessly. Highly recommended.”<br /><span class="block font-semibold mt-2">— James T.</span></blockquote>
    </div>
  </div>
</section>
<section class="py-16 px-6 max-w-xl mx-auto">
  <h2 class="text-2xl font-bold mb-6 text-center">Contact Us</h2>
  <form class="space-y-4 bg-white p-6 shadow-md rounded-lg" netlify>
    <input type="text" name="name" placeholder="Your Name" required class="w-full border rounded px-4 py-2" />
    <input type="email" name="email" placeholder="Your Email" required class="w-full border rounded px-4 py-2" />
    <textarea name="message" placeholder="Your Message" required class="w-full border rounded px-4 py-2"></textarea>
    <button type="submit" class="bg-blue-900 text-white px-6 py-2 rounded hover:bg-blue-800">Send Message</button>
  </form>
</section>

  <footer class="bg-gray-100 py-6 text-center text-sm">
    © 2025 Reliable Contracting. All rights reserved.
  </footer>
</BaseLayout>
